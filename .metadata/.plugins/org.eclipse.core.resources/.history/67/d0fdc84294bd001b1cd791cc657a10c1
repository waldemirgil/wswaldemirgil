package decisao;

import javax.swing.JOptionPane;

public class Exercicio4 {

	public static void main(String[] args) {
		
		/*
		 * Exercício 4
		 * Receba três números inteiros e coloque-os em ordem numérica
		 * crescente. Garanta que os três números sejam diferentes.
		 */
		
		int numero1 = Integer.parseInt(JOptionPane.showInputDialog("Número 1"));
		int numero2 = Integer.parseInt(JOptionPane.showInputDialog("Número 2"));
		int numero3 = Integer.parseInt(JOptionPane.showInputDialog("Número 3"));
		
		if (numero1>numero2 && numero1>numero3 && numero2<numero3) {
			System.out.println("Resultado: " + numero1 + numero2 + numero3);
		}else
		if (numero2>numero3 && numero2>numero1 && numero3>numero1) {
			System.out.println("Resultado: " + numero2 + numero3 + numero1);
		}else
		if (numero3>numero2 && numero3>numero1 && numero1>numero2) {
			System.out.println("Resultado: " + numero3 + numero1 + numero2);
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
}
