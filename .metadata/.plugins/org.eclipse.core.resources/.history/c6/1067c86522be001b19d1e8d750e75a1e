package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		
		/*
		 * Capturem separadamente: dia, mês e ano
		 * 
		 * Para o dia somente será aceito a quantidade de dias de acordo com o mês
		 * (considere fevereiro somente com 29 dias)
		 * 
		 * Para o mês aceite somente valores entre 1 e 12
		 * 
		 * Para o ano aceite somente valores entre 2003 e 1920
		 * 
		 * -- começar pelo ano, depois mês e depois dia
		 */
		
		String ano = JOptionPane.showInputDialog("Digite o ano");
	
		while (ano.length()>1920 || ano.length()<2003) {
			ano = JOptionPane.showInputDialog("Digite um ano válido");
		}
			
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
}
